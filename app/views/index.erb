<div class="welcome">
  <h1>Notes</h1>
  <p><a href="/new_note">Create a new note!</a></p><br>
  <form action="/update_note" method="post">
    <input type="text" name="name" placeholder="note title">
    <input type="submit" value="Search a note by title">
  </form>
</div>


<% if @notes %>
<div class="note">
  <table>
  <% counter = @notes.length %>
<% @notes.reverse.each do |note| %>
<tr>
  <td>Note # <%= counter %>: <%= note.title %></td>
</tr>
<tr>
  <td><%= note.content  %></td>
</tr>

</div>
<% counter -= 1 %>
<% end %>
</table>
<% end %>





